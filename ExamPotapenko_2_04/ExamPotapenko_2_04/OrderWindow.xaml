<Window x:Class="ExamPotapenko_2_04.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamPotapenko_2_04"
        mc:Ignorable="d"
        Title="Оформление заказа" Height="450" Width="800" Icon="пицца.png">
    <ScrollViewer Background="#F4E8D3" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="Auto">
            <TextBlock Text="Оформение заказа" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" Foreground="#67BA80"
                       HorizontalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Контактные данные заказчика:"></TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Имя" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Фамилия" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Отчество" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <TextBlock Text="Адрес доставки:"></TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Улица:" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Дом:" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Квартира:" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="Телефон:" Width="150"/>
                    <TextBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="BackButton" Height="25" Width="100" Content="Назад" Margin="10"/>
                    <Button Click="OrderButton" Height="25" Width="100" Content="Оформить заказ"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
